<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordMemorizer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordMemorizer"
    FlyoutBehavior="Disabled"
    NavBarIsVisible="False">

    <TabBar>
        <Tab>
            <ShellContent
                Title="Categories"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
            <ShellContent
                Title="Add category"
                ContentTemplate="{DataTemplate local:AddCategory}"
                Route="AddCategory" />
        </Tab>
        <Tab>
            <ShellContent
                Title="Words"
                ContentTemplate="{DataTemplate local:Words}"
                Route="Words" />
            <ShellContent
                Title="Add new word"
                ContentTemplate="{DataTemplate local:AddWord}"
                Route="AddWord" />
        </Tab>
    </TabBar>
</Shell>
